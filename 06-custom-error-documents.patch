+int
+open_errdoc(const char *root, const char *file, struct stat *sb)
+{
+	char	*path;
+	int	 fd;
+
+	if (asprintf(&path, "%s/%s.html", root, file) == -1)
+		fatal("asprintf");
+	if (access(path, R_OK) != 0 || stat(path, sb) != 0 ||
+	    (fd = open(path, O_RDONLY)) == -1) {
+		free(path);
+		return (-1);
+	}
+	free(path);
+	return (fd);
 }
 
