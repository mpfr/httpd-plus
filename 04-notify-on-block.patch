+	size_t			 n, size;
+	ssize_t			 nw;
+
+	if (event == EV_TIMEOUT) {
+		log_warnx("timeout while writing to notify socket at '%s'",
+		    path);
+		event_del(ev);
+		return;
+	}
+	/* EV_WRITE */
