+char *
+replace_var(const char *str, const char *var, const char *repl)
+{
+	char	*iv, *new, *r;
+	size_t	 vlen;
+
+	if ((new = strdup(str)) == NULL)
+		return (NULL);
+
+	vlen = strlen(var);
+	while ((iv = strstr(new, var)) != NULL) {
+		*iv = '\0';
+		if (asprintf(&r, "%s%s%s", new, repl, &iv[vlen]) == -1) {
+			free(new);
+			return (NULL);
+		}
+		free(new);
+		new = r;
+	}
+	return (new);
+}
